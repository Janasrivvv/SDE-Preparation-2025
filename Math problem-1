//count digits of a number
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int num=sc.nextInt();
	    int count=0;
	    num=Math.abs(num);
	    if(num==0){
	        System.out.println("1");
	        return;
	    }
	    while(num!=0){
	        num/=10;
	        count+=1;
	    }
		System.out.println(count);
	}
}
